.answer-dialog {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  visibility: hidden;

  &__inner {
    background: $color-background;
    box-shadow: 0 -5px 20px hsl(280, 50%, 10%);
    border-top: 1px solid rgba(255, 255, 255, 0.3);
    padding: 1em;
    display: flex;
    visibility: visible;
    transition: transform 0.3s ease;
    transform: translateY(100%);
  }

  input {
    flex-grow: 1;
    margin-right: 1em;
  }

  &--active &__inner {
     transform: translateY(0);
   }

  &--error &__inner {
    color: $color-signal-error;
    border-top-color: rgba($color-signal-error, 0.3);
  }

  &--success &__inner {
    color: $color-signal-success;
    border-top-color: rgba($color-signal-success, 0.3);
  }
}
