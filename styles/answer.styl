.answer-dialog {
  position: fixed;
  top: 100%;
  left: 0;
  right: 0;
  background: inherit;
  padding: 1em;
  border-top: 1px solid rgba(255, 255, 255, 0.3);
  display: flex;
  box-shadow: 0 -5px 20px hsl(280, 50%, 10%);
  transform: translateY(0);
  transition: transform 0.3s ease;

  &--active {
     transform: translateY(-100%);
   }

  &--error {
    color: $color-signal-error;
    border-top-color: rgba($color-signal-error, 0.3);
  }

  &--success {
    color: $color-signal-success;
    border-top-color: rgba($color-signal-success, 0.3);
  }

  input {
    flex-grow: 1;
    margin-right: 1em;
  }
}
