html {
  height: 100%;
}

body {
  background: hsl(280, 50%, 10%);
  color: white;
  font-family: monospace;
  text-align: center;
  margin: 0;
  padding: 1em;
  max-width: 32em;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  flex-direction: column;
  height: 100%;
  line-height: 1.5;
  font-size: 14px;
}

ul {
  padding-left: 0;
}

ul:not([class]) li {
  display: flex;
  text-align: left;
  margin-top: 0.5em;
}

ul:not([class]) li:before {
  content: "â€”";
  margin-right: 0.5em;
}

input,
button {
  border: solid 2px;
  line-height: inherit;
  color: inherit;
  font-family: inherit;
  font-size: inherit;
  text-transform: uppercase;
  height: 3em;
  background-color: transparent;
  padding: 0;
  box-sizing: border-box;
}

input {
  text-align: left;
  border-color: transparent transparent currentColor;
}

input::placeholder {
  color: rgba(255, 255, 255, 0.3);
}

button {
  min-width: 5em;
  border-color: currentColor;
  font-weight: bold;
  padding: 0 1em;
}

quote {
  font-style: italic;
  position: relative;
  text-transform: uppercase;
}

quote::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  right: 0;
  bottom: -2px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.3);
}

main {
  padding: 40vh 0;
}

.step {
  min-height: 100vh;
}

.step + .step {
  margin-top: 70vh;
}

.step--current ~ .step {
  display: none;
}

.step h2::before,
.step h2::after {
  content: "";
  display: inline-block;
  height: 1px;
  width: 3em;
  vertical-align: middle;
  background: rgba(255, 255, 255, 0.3);
  margin: 0 0.5em;
}

.step--current h2 {
  display: block;
}

.clue {
  position: relative;
  font-style: italic;
}

.toggle-answer,
.message {
  margin-top: 3em;
}

.toggle-answer {
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
}

.step--done .toggle-answer {
  display: none;
}

.message {
  opacity: 0;
  visibility: hidden;
  border-top: 1px solid transparent;
  position: relative;
  transition-property: visibility, opacity;
  transition-duration: 0.5s;
  transition-timing-function: ease
}

.step--done .message {
  opacity: 1;
  visibility: visible;
}

.message::before {
  content: "";
  display: block;
  width: 11em;
  height: 1px;
  margin: 0 auto 3em;
  background: rgba(255, 255, 255, 0.3);
}

.message button {
  margin-top: 1.5em;
}

.answer {
  position: fixed;
  top: 100%;
  left: 0;
  right: 0;
  background: inherit;
  padding: 1em;
  border-top: 1px solid rgba(255, 255, 255, 0.3);
  display: flex;
  box-shadow: 0 -5px 20px hsl(280, 50%, 10%);
  transform: translateY(0);
  transition: transform 0.3s ease;
}

.answer--active {
  transform: translateY(-100%);
}

.answer input {
  flex-grow: 1;
  margin-right: 1em;
}
